<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="csc296.project02.FeedActivity"
    android:orientation="vertical"
    android:background="#515151">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.2"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/Feed_UpdateTitle"
        android:textColor="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:text="@string/Feed_AddPic"
            android:id="@+id/Button_FeedAddPic"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/Feed_Hint"
            android:textStyle="bold"
            android:id="@+id/EditText_StatusUpdate"
            android:textColor="#cccccc"/>

    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:text="@string/Feed_Post"
        android:id="@+id/Button_PostUpdate"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.2"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/Feed_FeedTitle"
        android:textColor="#cccccc"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="1.5"
        android:id="@+id/RecyclerView_Feed">

    </android.support.v7.widget.RecyclerView>




</LinearLayout>
